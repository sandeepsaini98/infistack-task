<h1>Edit Custom Field</h1>
<%= form_for [@custom_field.user, @custom_field], url: user_custom_field_path(@custom_field.user, @custom_field), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :field_name, "Field Name" %>
    <%= f.text_field :field_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :input_type, "Input Type" %>
    <%= f.select :input_type, CustomField::INPUT_TYPES, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :default_value, "Default Value" %>
    <%= f.text_field :default_value, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Custom Field", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to User", user_path(@custom_field.user), class: "btn btn-secondary" %>
